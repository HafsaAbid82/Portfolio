{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "portfolio/vite.config.js",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "portfolio/dist"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/(.*)", "dest": "portfolio/dist/$1" }
  ]
}

